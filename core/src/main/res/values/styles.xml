<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Crypto" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bgStatusBar</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@color/bgWindow</item>
        <item name="toolbarStyle">@style/Theme.Crypto.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>

        <item name="textAppearanceHeadline5">@style/TextAppearance.Crypto.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Crypto.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Crypto.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Crypto.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Crypto.Body1</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Crypto.Overline</item>
    </style>

    <style name="Theme.Crypto.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/bgToolbar</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Crypto.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.Crypto.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Crypto.Subtitle1" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Crypto.Subtitle2" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Crypto.Body1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Crypto.Overline" parent="@style/TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>